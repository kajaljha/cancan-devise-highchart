<%- model_class = Info -%>
<div class="page-header" >
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

  <table class="col-md-12 table table-bordered table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:last_name) %></th>
      <th><%= model_class.human_attribute_name(:father_name) %></th>
      <th><%= model_class.human_attribute_name(:Date_Of_Birth) %></th>
      <th><%= model_class.human_attribute_name(:Date_Of_Joining) %></th>
      <th><%= model_class.human_attribute_name(:Expericence) %></th>
      <th><%= model_class.human_attribute_name(:prevoius_company) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:contact_no) %></th>
      <th><%= model_class.human_attribute_name(:Reference_contact_no) %></th>
      <th><%= model_class.human_attribute_name(:sallry_per_annum) %></th>
      <th><%= model_class.human_attribute_name(:probation) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @infos.each do |info| %>
      <tr>
        <td><%= link_to info.id, info_path(info) %></td>
        <td><%= info.first_name %></td>
        <td><%= info.last_name %></td>
        <td><%= info.father_name %></td>
        <td><%= info.DOB %></td>
        <td><%= info.DOJ %></td>
        <td><%= info.Expericence %></td>
        <td><%= info.prevoius_company %></td>
        <td><%= info.address %></td>
        <td><%= info.contact_no %></td>
        <td><%= info.Reference_contact_no %></td>
        <td><%= info.sallry %></td>
        <td><%= info.probation %></td>
        <td><%=l info.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_info_path(info), :class => 'btn btn-danger btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      info_path(info),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-success btn-xs' %>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      info_path(info), :class => 'btn btn-info btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_info_path,
            :class => 'btn btn-primary' %>
