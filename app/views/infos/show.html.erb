<%- model_class = Info -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:first_name) %>:</strong></dt>
  <dd><%= @info.first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_name) %>:</strong></dt>
  <dd><%= @info.last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:father_name) %>:</strong></dt>
  <dd><%= @info.father_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:DOB) %>:</strong></dt>
  <dd><%= @info.DOB %></dd>
  <dt><strong><%= model_class.human_attribute_name(:DOJ) %>:</strong></dt>
  <dd><%= @info.DOJ %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Expericence) %>:</strong></dt>
  <dd><%= @info.Expericence %></dd>
  <dt><strong><%= model_class.human_attribute_name(:prevoius_company) %>:</strong></dt>
  <dd><%= @info.prevoius_company %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @info.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contact_no) %>:</strong></dt>
  <dd><%= @info.contact_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Reference_contact_no) %>:</strong></dt>
  <dd><%= @info.Reference_contact_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sallry) %>:</strong></dt>
  <dd><%= @info.sallry %></dd>
  <dt><strong><%= model_class.human_attribute_name(:probation) %>:</strong></dt>
  <dd><%= @info.probation %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              infos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_info_path(@info), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              info_path(@info),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
